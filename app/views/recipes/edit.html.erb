<h1>Edit Recipe</h1>
<%= form_tag "/recipes/#{@recipe.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title, @recipe.title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :chef %>
    <%= text_field_tag :chef, @recipe.chef, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :ingredients %>
    <%= text_field_tag :ingredients, @recipe.ingredients, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :directions %>
    <%= text_field_tag :directions, @recipe.directions, class: 'form-control' %>
  </div>
  <%= submit_tag "Edit recipe", class: "btn btn-primary" %>
<% end %>

<h1>Edit Recipe</h1>
<%= form_tag '/recipes/:id', method: :patch do %>
  <div>
    Title: <input type="text" name="title" value="<%= @recipe.title %>">
  </div>
  <div>
    Chef: <input type="text" name="chef" value="<%= @recipe.chef %>">
  </div>
  <div>
    Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
  </div>
  <div>
    Directions: <input type="text" name="directions" value="<%= @recipe.directions %>">
  </div>
  <input type="submit" value="Update recipe">
<% end %>
